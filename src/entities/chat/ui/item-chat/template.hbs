<li class="item-chat"{{#if id}} key={{id}}{{/if}}>
    <div class="item-chat__container{{#if active}} item-chat__container_active{{/if}}">
            {{{avatar}}}
            <div class="item-chat__info">
                    <div class="item-chat__info-title">
                            <p class="item-chat__name text text_title">{{name}}</p>
                            {{#if date}}
                                <date class="item-chat__date text text_label text_light-color">{{date}}</date>
                            {{/if}}
                    </div>
                    {{#if message}}
                        <div class="item-chat__info-subtitle">
                                <span class="item-chat__message text text_light-color">{{message}}</span>
                                {{#if count}}
                                        <div class="item-chat__count">
                                                <span class="text text text_contrast-color">{{count}}</span>
                                        </div>
                                {{/if}}
                        </div>
                    {{/if}}
            </div>
    </div>
    {{>Divider}}
    <div class="item-chat__touch-layer"></div>
</li>
