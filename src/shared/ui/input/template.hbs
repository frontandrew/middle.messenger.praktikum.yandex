<input
    class="{{#if classes}}{{classes}} {{/if}}input text"
    type="{{type}}"
    name="{{name}}"
    id="{{name}}"
    value="{{value}}"
    placeholder="{{placeholder}}"
    {{#if accept}}accept="{{accept}}"{{/if}}
    {{#if tabindex}}tabindex="{{tabindex}}"{{/if}}
    {{#if autofocus}}autofocus{{/if}}
    {{#if disabled}}disabled{{/if}}
/>
