<div class="{{#if class}}{{class}} {{/if}}field{{#if hasError}} field_error{{/if}}{{#if disabled}} field_disabled{{/if}}">
  <div class="field-container{{#if inline}}_inline{{/if}}">
    <label for="{{name}}" class="field__label{{#if inline}}_inline{{/if}} text">{{label}}</label>
    <input
      class="field__input{{#if inline}}_inline text_rigth{{/if}} text{{#if hasError}} text_error-color{{/if}}"
      type="{{type}}"
      name="{{name}}"
      id="{{name}}"
      value="{{value}}"
      placeholder="{{name}}"
      {{#if disabled}}disabled{{/if}}
    />
    </div>
  {{>Divider}}
  {{#if hasError}}
    <span class="field__text{{#if inline}}_inline{{/if}} text text_error-color text_info">{{textError}}</span>
  {{else}}
    <span class="field__text{{#if inline}}_inline{{/if}} text text_light-color text_info">{{textHelp}}</span>
  {{/if}}
</div>
