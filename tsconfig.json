{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "api/*": ["./shared/api/*"],
      "core": ["./shared/core/index"],
      "entities": ["./entities/index"],
      "images": ["./assets/images/index"],
      "network": ["./shared/network/index"],
      "pages": ["./pages/index"],
      "routing": ["./shared/routing/index"],
      "store": ["./shared/store/index"],
      "tools": ["./shared/tools/index"],
      "ui": ["./shared/ui/index"],
      "validation": ["./shared/validation/index"]
    }
  },
  "include": ["src"]
}
